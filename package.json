{
  "name": "shared-biubiu-crypto-utils",
  "version": "1.0.6",
  "description": "...",
  "type": "module",
  "main": "build/module/index.js",
  "typings": "build/module/index.d.ts",
  "module": "build/module/index.js",
  "repository": "https://github.com/atshelchin/shared-biubiu-crypto-utils",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "watch:build": "tsc -p tsconfig.module.json -w",
    "build": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s build test:*",
    "test:lint": "eslint src --ext .ts",
    "test:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test:unit": "c8 ava",
    "test:spelling": "cspell \"{README.md,.github/*.md,src/**/*.ts}\"",
    "release": "standard-version",
    "prepare-release": "run-s reset-hard test cov:check doc:html version doc:publish",
    "cz": "cz"
  },
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@ava/typescript": "^4.1.0",
    "@noble/curves": "^1.2.0",
    "@noble/secp256k1": "^2.0.0",
    "@scure/bip32": "^1.3.2",
    "@scure/bip39": "^1.2.1",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "ava": "^5.3.1",
    "c8": "^8.0.1",
    "codecov": "^3.5.0",
    "commitizen": "^4.3.0",
    "cspell": "4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "ed25519-keygen": "^0.4.8",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-functional": "6.0.0",
    "eslint-plugin-import": "^2.22.0",
    "hash-wasm": "^4.9.0",
    "npm-run-all": "^4.1.5",
    "open-cli": "^6.0.1",
    "prettier": "^3.0.3",
    "standard-version": "^9.5.0",
    "ts-node": "^9.0.0",
    "typescript": "^5.2.2",
    "viem": "^1.16.5"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "ava": {
    "failFast": true,
    "timeout": "60s",
    "typescript": {
      "extensions": [
        "ts",
        "tsx",
        "js"
      ],
      "rewritePaths": {
        "src/": "build/module/"
      },
      "compile": false
    },
    "files": [
      "!build/module/**"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "peerDependencies": {
    "@noble/curves": "^1.2.0",
    "@noble/secp256k1": "^2.0.0",
    "@scure/bip32": "^1.3.2",
    "@scure/bip39": "^1.2.1",
    "ed25519-keygen": "^0.4.8",
    "hash-wasm": "^4.9.0",
    "viem": "^1.14.0"
  },
  "dependencies": {
    "bs58": "^5.0.0",
    "elliptic": "^6.5.4"
  }
}
